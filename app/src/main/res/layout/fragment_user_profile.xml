<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.UserProfile"
    android:id="@+id/userProfFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="221dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_bg"
                    android:elevation="15dp">


                    <LinearLayout
                        android:id="@+id/userImgContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                        app:layout_constraintHorizontal_bias="0.09"
                        app:layout_constraintStart_toStartOf="@id/constraintLayout"
                        app:layout_constraintTop_toTopOf="@id/constraintLayout">

                        <ImageView
                            android:id="@+id/profileImg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/user_circle"
                            android:src="@drawable/profile"
                            tools:layout_editor_absoluteX="20dp"
                            tools:layout_editor_absoluteY="105dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/userDetailsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                        app:layout_constraintHorizontal_bias=".07"
                        app:layout_constraintStart_toEndOf="@id/userImgContainer"
                        app:layout_constraintTop_toTopOf="@id/constraintLayout">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="David wall"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="david@gmail.com"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/notificationAlarm"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/bell"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/userDetailsContainer"
                        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>



            <!--    Upper Menus Container-->
