<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.TransactionChart"
    android:id="@+id/chart_fragment"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chartFragmentToolBar"
            android:layout_weight="1"
            tools:ignore="ObsoleteLayoutParam">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/chartAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/chartToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"/>

            </com.google.android.material.appbar.AppBarLayout>

        </LinearLayout>


<!--        Chart & time-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp">

            <Spinner
                android:id="@+id/chartSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/chartRecycleViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chartRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>